  ASSET
  LIABILITY
  EQUITY
  INCOME
  EXPENSE
}

enum DepreciationMethod {
  STRAIGHT_LINE
}

enum FixedAssetStatus {
  DRAFT
  CAPITALIZED
  DISPOSED
}

