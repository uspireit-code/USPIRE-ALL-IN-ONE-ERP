# Example environment variables for local development
# Copy this file to .env and adjust values for your environment.

NODE_ENV=development
PORT=3000

# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/uspire_erp?schema=public

# JWT secrets (DO NOT COMMIT real values)
JWT_ACCESS_SECRET=change-me
JWT_REFRESH_SECRET=change-me

# Token TTLs
# Supported formats: 900 or 15m / 7d
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Backwards-compatible names used by current code (optional)
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173

# Public base URL of this backend (used for links, callbacks, etc.)
APP_BASE_URL=http://localhost:3000

# Storage
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=./storage

# Logging
LOG_LEVEL=info

# Feature flags (read-only hardening / performance)
RATE_LIMIT_ENABLED=true
TIMEOUTS_ENABLED=true
CACHE_ENABLED=true
